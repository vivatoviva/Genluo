{
  "name": "personSite",
  "bin": {
    "push": "./push.sh"
  },
  "scripts": {
    "next": "next dev ",
    "dev": "cross-env NODE_ENV=dev node server/index.js",
    "push": "./push.sh",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "css:build": "webpack --config webpack-css.js --progress --color",
    "css:dev": "webpack --config webpack-css.js --watch --progress --color",
    "lint": "eslint --ext .js pages",
    "analyze": "cross-env ANALYZE=1 next build",
    "deploy": "npm run build && pm2 stop index && cross-env NODE_ENV=production pm2 start server/index.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-brands-svg-icons": "^5.3.1",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "any-promise": "^1.3.0",
    "babel-eslint": "^10.0.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.6",
    "i": "^0.3.6",
    "isomorphic-unfetch": "^3.0.0",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-route": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.9.0",
    "log4js": "^3.0.5",
    "lru-cache": "^4.1.3",
    "moment": "^2.22.2",
    "mysql": "^2.16.0",
    "next": "^7.0.1",
    "npm": "^6.13.4",
    "nprogress": "^0.2.0",
    "prismjs": "^1.15.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-dev-server": "^3.1.8"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "scss-loader": "0.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-sources": "^1.2.0"
  }
}
